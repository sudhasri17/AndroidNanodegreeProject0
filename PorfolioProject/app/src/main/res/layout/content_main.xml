<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/activity_main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <Button
            android:layout_width="wrap_content"
            android:text="@string/spotify_streamer"
            android:id="@+id/spotify_btn"
            android:layout_margin="8dp"
            android:padding="5dp"
            android:background="@color/lightPrimary"
            android:layout_height="wrap_content" />

        <Button
            android:layout_width="wrap_content"
            android:text="@string/scores_app"
            android:id="@+id/scores_btn"
            android:layout_margin="8dp"
            android:padding="5dp"
            android:background="@color/lightPrimary"
            android:layout_height="wrap_content" />
        <Button
            android:layout_width="wrap_content"
            android:text="@string/library_app"
            android:id="@+id/library_btn"
            android:layout_margin="8dp"
            android:padding="5dp"
            android:background="@color/lightPrimary"
            android:layout_height="wrap_content" />
        <Button
            android:layout_width="wrap_content"
            android:text="@string/build_it_bigger"
            android:id="@+id/build_btn"
            android:layout_margin="8dp"
            android:padding="5dp"
            android:background="@color/lightPrimary"
            android:layout_height="wrap_content" />
        <Button
            android:layout_width="wrap_content"
            android:id="@+id/xyz_btn"
            android:layout_margin="8dp"
            android:padding="5dp"
            android:text="@string/xvy_reader"
            android:background="@color/lightPrimary"
            android:layout_height="wrap_content" />
        <Button
            android:layout_width="wrap_content"
            android:id="@+id/capstone_btn"
            android:layout_margin="8dp"
            android:padding="5dp"
            android:text="@string/capstone"
            android:background="@color/lightPrimary"
            android:layout_height="wrap_content" />

    </LinearLayout>


</android.support.v4.widget.NestedScrollView>
